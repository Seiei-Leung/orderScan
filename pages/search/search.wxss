/* pages/search/search.wxss */
@import '../../weui.wxss';

.searchBox {
  box-sizing: border-box;
  padding: 0.5em 1em;
  margin: auto;
  margin-top: 20px;
  width: 95%;
  font-size: 16px;
  border-radius: 4px;
  border: 1px solid #ddd;
}

.weui-navbar__item {
  background-color: #fff;
}

.item {
  box-sizing: border-box;
  padding: 0.5em;
  width: 95%;
  margin: auto;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  color: #444;
}

.title {
  display: inline-block;
  width: 6em;
}
.txt {
  display: inline-block;
}
.weui-cell__hd {
  width: 105px;
  height: 44px;
  line-height: 44px;
  text-align: center;
  border-right: 1px solid #ccc;
}
.weui-cell {
  border-bottom: 1px solid #ccc;
}
.inputDateWrapper {
  margin: 0 5px;
  padding: 0 5px;
  height: 30px;
  width: 40%;
  border: 1px solid #ccc;
}
.inputDatePicker {
  width: 100%;
  line-height: 30px;
  text-align: center;
  font-size:16px;
}
.btnWrapper {
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
  margin-bottom: 5px;
}
.btnWrapper .btn {
  padding: 5px 10px;
  border-radius: 4px;
  background-color: #ddd
}