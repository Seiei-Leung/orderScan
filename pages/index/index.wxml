<!--index.wxml-->
<view class="container">
  <view style="position:absolute;top:10px;right:10px;padding: 5px 10px;background-color: #F43530;color: #fff;border-radius: 4px;" bindtap='signout'>
    登出
  </view>
  <view>
    <image class='img' src="{{src}}"></image>
  </view>
  <view style='margin-top: 30px;'>
    <view class="title">账号：</view>
    <view class="txt">{{code}}</view>
  </view>
  <view style='margin-top: 30px;'>
    <view class="title">账号名称：</view>
    <view class="txt">{{name}}</view>
  </view>
  <view style='margin-top: 60px;display: flex;display: -webkit-flex;width: 100%;justify-content: center;-webkit-justify-content: center;line-height:50px;text-align:center;'>
    <view class="submitContainer">
      <button class="submitBtn" bindtap='scan' style='display: flex;display: -webkit-flex;'>
        <sicon name="icon-barcode"></sicon>
        <view style="margin-left: 1em;">扫 码</view>
      </button>
    </view>
    <view class="submitContainer" style='margin-left: 20px;'>
      <button class="submitBtn" bindtap='goSearch' style='display: flex;display: -webkit-flex;'>
        <sicon name="icon-search"></sicon>
        <view style="margin-left: 1em;">查 询</view>
      </button>
    </view>
  </view>
</view>